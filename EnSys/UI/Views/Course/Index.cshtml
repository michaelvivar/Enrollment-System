@model IEnumerable<UI.Models.CourseModel>

@{
    ViewBag.Title = "Courses";
}

<h2>Courses</h2>

<p>
    @Html.ActionLink("Add New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th></th>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            No. of Students enrolled
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td width="20"><a href="@Url.Action("Edit", new { id = item.Id })" class="glyphicon glyphicon-pencil"></a></td>
        <td width="20"><a href="@Url.Action("Delete", new { id = item.Id })" data-action="delete" class="glyphicon glyphicon-trash"></a></td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Students)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
    </tr>
}

</table>
